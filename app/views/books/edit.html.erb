<% if @bookf.errors.any? %>
  <%= @bookf.errors.count %>errors have occurred
  <% @bookf.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<main>
  <p id="notice"></p>
  <div class="container">
    <row>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model:@bookf, url:book_path(@bookf), local:true do |f| %>

        <%= f.label :title, "Title" %>
        <div class="form-group mb-3">
        <%= f.text_field :title, class: "form-control" %>
       </div>
        <%= f.label :body, "Opinion" %>
        <div class="form-group">
         <%= f.text_area :body, class: "form-control" %>
        </div>
        <div clas="form-group">
         <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        <%end%>

        <%= link_to"Show", book_path %> <bobr> | </bobr><%= link_to"Back",books_path  %>
      </div>
    </row>
  </div>
</main>
