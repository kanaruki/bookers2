<% if @book.errors.any? %>
  <%= @book.errors.count %>errors have occurred
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<main>
 <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <h2>User info</h2>
         <%= render 'users/user', user: @user %>
    </div>
        <h2 class="mt-3">New book</h2>
        <%= render 'books/book', book: @book %>
    </div>
         <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody> </tbody>
            <% @books.each do |b| %>
             <tr>
              <td>
               <%= link_to user_path(b.user) do %>
                <%= attachment_image_tag b.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg"  %>
               <%end%>
              </td>

              <td>
              <%= link_to b.title, book_path(b.id) %>
              </td>
              <td>
               <%= b.body %>
              </td>
             </tr>
            <% end %>

          </table>
         </div>

  </div>
 </div>
</main>